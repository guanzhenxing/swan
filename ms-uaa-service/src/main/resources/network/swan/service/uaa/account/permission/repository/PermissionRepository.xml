<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="network.swan.service.uaa.account.permission.repository.PermissionRepository">

    <resultMap id="basePermissionResult" type="network.swan.service.uaa.account.permission.domain.Permission">
        <id column="ID" jdbcType="VARCHAR" property="id"/>
        <result column="NAME" jdbcType="VARCHAR" property="name"/>
        <result column="DISPLAY_NAME" jdbcType="VARCHAR" property="displayName"/>
        <result column="CREATE_TIME" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="UPDATE_TIME" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="ENABLED" jdbcType="TINYINT" property="enabled"/>
    </resultMap>

    <delete id="delete" parameterType="java.lang.String">
        delete from PERMISSION
        where ID = #{id,jdbcType=VARCHAR}
    </delete>

    <insert id="insert" parameterType="network.swan.service.uaa.account.permission.domain.Permission">
        insert into PERMISSION (ID, `NAME`, DISPLAY_NAME,
        CREATE_TIME, UPDATE_TIME, ENABLED
        )
        values (#{id,jdbcType=VARCHAR}, #{name,jdbcType=VARCHAR}, #{displayName,jdbcType=VARCHAR},
        #{createTime,jdbcType=TIMESTAMP}, #{updateTime,jdbcType=TIMESTAMP}, #{enabled,jdbcType=TINYINT}
        )
    </insert>

    <update id="update" parameterType="network.swan.service.uaa.account.permission.domain.Permission">
        update PERMISSION
        set `NAME` = #{name,jdbcType=VARCHAR},
        DISPLAY_NAME = #{displayName,jdbcType=VARCHAR},
        CREATE_TIME = #{createTime,jdbcType=TIMESTAMP},
        UPDATE_TIME = #{updateTime,jdbcType=TIMESTAMP},
        ENABLED = #{enabled,jdbcType=TINYINT}
        where ID = #{id,jdbcType=VARCHAR}
    </update>

    <select id="selectById" parameterType="java.lang.String" resultMap="basePermissionResult">
        select ID, `NAME`, DISPLAY_NAME, CREATE_TIME, UPDATE_TIME, ENABLED
        from PERMISSION
        where ID = #{id,jdbcType=VARCHAR}
    </select>

    <sql id="where_sql">
        <where>
            <if test="permission.name != null">
                name like "%"#{permission.name}"%"
            </if>
            <if test="permission.displayName != null">
                DISPLAY_NAME like "%"#{permission.displayName}"%"
            </if>
            <if test="permission.enabled != null">
                enabled = #{permission.enabled}
            </if>
        </where>
    </sql>
    <select id="search" resultMap="basePermissionResult">
        select ID, `NAME`, DISPLAY_NAME, CREATE_TIME, UPDATE_TIME, ENABLED
        from PERMISSION
        <include refid="where_sql"/>
    </select>

    <select id="countBySearch" resultType="int">
        select count(1)
        from PERMISSION
        <include refid="where_sql"/>
    </select>

    <select id="selectPermissionsByRoleId" resultMap="basePermissionResult">
        select p.*
        from permission p
        inner join role_permission rp on rp.permission_id = p.id
        where rp.role_id = #{roleId}
    </select>


</mapper>